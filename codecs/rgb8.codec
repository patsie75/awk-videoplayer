#!/usr/bin/gawk -f
@include "src/ord.gawk"

BEGIN {
  RS = ".{" width "}"
}

{
  byte = 1
  line = ""
  split(RT, data, "")

  for (x=0; x<width; x++)
  {
    rgb = ORD[data[byte]]
    line = line sprintf("%d;%d;%d ", and(rgb,0xE0) / 0xE0 * 0xFF, and(rgb,0x1C) / 0x1C * 0xFF, and(rgb, 0x03) / 0x03 * 0xFF )
    byte++
  }

  printf("%s\n", line)
  fflush()
}
