#!/usr/bin/gawk -f
@include "src/decfnc.gawk"

BEGIN {
  RS = ".{" width * bytes_per_pix "}"

  byte_inc = bytes_per_pix * macro_pix
}

{
  byte = 1
  line = ""
  split(RT, data, "")
  
  for (x=0; x<width; x+=macro_pix)
  {
    line = line @decfnc(data, byte) " "
    byte += byte_inc
  }

  printf("%s\n", line)
  fflush()
}

